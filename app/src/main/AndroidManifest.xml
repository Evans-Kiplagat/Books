<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.book">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Base">
        <activity android:name=".About"
            android:label="About">

        </activity>
        <activity android:name=".FavBooks"
            android:label="favorite"/>
        <activity android:name=".ReadingBook"
            android:label="Currently reading books"/>
        <activity android:name=".wishBooks"
            android:label="Wishlist Books"/>
        <activity android:name=".allreadyreadBook"
            android:label="Already read books"/>
        <activity android:name=".BookActiviy"
            android:label="More Detail about this book"/>
        <activity android:name=".Allbooks"
            android:label="All available Books"/>
        <activity android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>